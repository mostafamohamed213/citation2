@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<style>
    .l:hover {
        cursor:pointer;
    }
</style>
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>طلبات تسجيل المستخدمين بالموقع</h2>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                var s = "s" + i;
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label l"   asp-for="@Model[i].IsSelected">
                        <a data-toggle="modal"style="color:blue; text-decoration:underline" data-target=".@s"> @Model[i].UserName</a>
                    </label>
                </div>
                       
         

                <div class="modal fade  @s" tabindex="-1" id="@s" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row  p-2 mr-3">

                                        <div class="col-sm-12 mb-2">     الاسم: @Model[i].FullName</div>
                                     
                                        <div class="col-sm-12 mb-2">   الايميل: @Model[i].UserName </div>
                                      
                                        <div class="col-sm-12">   العنوان: @Model[i].Address </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            }
            @if (Model.Count == 0)
            {
                <h4> لايوجد طلبات تسجيل مستخدمين الان</h4>
            }
        </div>

        <div class="card-footer">
            @if (Model.Count != 0)
            {
                <input type="submit" value="تحديث" class="btn btn-success"
                       style="width:auto" />
                <a asp-action="Index" asp-controller="Home"
                   class="btn btn-secondary" style="width:auto">تراجع</a>
            }


        </div>
    </div>
</form>

