@model Citations.Models.MagazineIssue

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>إضافة عدد جديد</h5>

<h6>@ViewBag.magazine.Name</h6>
<span>@ViewBag.magazine.Institution.Name</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Issuenumber" class="control-label"></label>
                <input asp-for="Issuenumber" class="form-control" />
                <span asp-validation-for="Issuenumber" class="text-danger"></span>

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="Magazineid" value="@ViewBag.magazineId" class="form-control" />
            </div>
            @*<div class="form-group">
                    <label asp-for="Publisherid" class="control-label"></label>
                    <select asp-for="Publisherid" class ="form-control" asp-items="ViewBag.Publisherid"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfPublication" class="control-label"></label>
                    <input asp-for="DateOfPublication" class="form-control" />
                    <span asp-validation-for="DateOfPublication" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="إضافة" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.magazineId">العودة للأعداد</a>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>