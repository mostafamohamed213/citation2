@model ResetPasswordViewModel
@{
    Layout = "_MainLayout";
}
<div class="col-md-4">
    <h3 class="bg-primary text-white p-2 mt-2">اعادة تعيين كلمة السر</h3>
 </div>
        <div class="row ml-0">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger bg-white"></div>
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="form-group col-sm-4">
                        <label asp-for="Password" class="bg-secondary text-white p-1 " >كلمةالسر الجديدة</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger bg-white"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="ConfirmPassword" class="bg-secondary text-white p-1">تأكيد كلمة السر</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger bg-white"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">حفظ</button>
                </form>
            </div>
        </div>
