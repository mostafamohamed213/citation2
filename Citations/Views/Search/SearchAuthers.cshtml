        $('.demo3').dropdown({
            multipleMode: 'label',
            input: '<input type="text" class="p-1 bg-light rounded rounded-pill shadow-sm mb-4"  placeholder="بحث في المؤسسات">',
            searchNoData: '<li style="color:red">No Results</li>',
            includeSelectAllOption: true,
            choice: function (val) {

