@model Citations.Models.PositionJob

@{
    ViewData["Title"] = "Edit";
}

 

<h5>تعديل الوظيفة</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
            <input type="hidden" asp-for="PositionJobid" />
            <div class="form-group">
                <label asp-for="PositionJob1" class="control-label"></label>
                <input asp-for="PositionJob1" class="form-control" />
                <span asp-validation-for="PositionJob1" style="color:red"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع الي القائمة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
