                <div class="col-sm-12">
                    <textarea style="width:80%;" asp-for="BriefQuoteEn" id="BriefQuoteEn" rows="2"></textarea>

                </div>
                <div class="col-sm-12">
                    <span asp-validation-for="BriefQuoteEn" class="text-danger"></span>
