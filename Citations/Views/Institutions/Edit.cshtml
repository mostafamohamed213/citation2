@model Citations.Models.Institution

@{
    ViewData["Title"] = "Edit";
}

<h5>اضافةمؤسسة</h5>
<hr />
<div class="row">
    <div class="col-sm-12">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Institutionid" />
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Country" class="control-label"></label>
                    <select asp-for="Country" class="form-control" asp-items="ViewBag.Country"></select>
                </div>
                <div class="col-sm-4">
                    <label asp-for="TypeOfInstitution" class="control-label"></label>
                    <select asp-for="TypeOfInstitution" class="form-control" asp-items="ViewBag.TypeOfInstitution"></select>
                </div>
            </div>

            <div class="form-group mt-2">
                <input asp-for="ScannedCoverImage" class="form-control" type="hidden" />
                @if (Model.ScannedCoverImage != null)
                {
                    <label asp-for="ScannedCoverImage" class="control-label">تحميل صورة غلاف جديده بدلا من القديمة</label>
                    <input type="file" name="cover">
                    <span asp-validation-for="ScannedCoverImage" class="text-danger"></span>
                }
                else
                {
                    <label asp-for="ScannedCoverImage" class="control-label">تحميل صورة غلاف</label>
                    <input type="file" name="cover">
                    <span asp-validation-for="ScannedCoverImage" class="text-danger"></span>
                }

            </div>
            <div class="form-group">
                <input asp-for="ScannedLogoImage" class="form-control" type="hidden" />
                @if (Model.ScannedLogoImage != null)
                {
                    <label asp-for="ScannedLogoImage" class="control-label">تحميل صورة لوجو جديدة بدلا من القديمة</label>

                    <input type="file" name="logo">
                    <span asp-validation-for="ScannedLogoImage" class="text-danger"></span>
                }
                else
                {
                    <label asp-for="ScannedLogoImage" class="control-label">تحميل صورة لوجو</label>

                    <input type="file" name="logo">
                    <span asp-validation-for="ScannedLogoImage" class="text-danger"></span>
                }
            </div>

            <div class="row" style="display:none">
                <div class="col-sm-4">
                    <label asp-for="ImpactFactor" class="control-label"></label>
                    <input asp-for="ImpactFactor" class="form-control" />
                    <span asp-validation-for="ImpactFactor" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="PointerH" class="control-label"></label>
                    <input asp-for="PointerH" class="form-control" />
                    <span asp-validation-for="PointerH" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="NumberOfCitations" class="control-label"></label>
                    <input asp-for="NumberOfCitations" class="form-control" />
                    <span asp-validation-for="NumberOfCitations" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group  form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> نشط
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع الي القائمة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
