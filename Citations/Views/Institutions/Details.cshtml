@model Citations.Models.Institution

@{
    ViewData["Title"] = "Details";
}

<h5>تفاصيل المؤسسة</h5>
<hr />
<div class="row">
    <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-12">
                    <label asp-for="Country" class="control-label"></label>
                    <span>@Model.CountryNavigation.Name</span>
                </div>
                <div class="col-sm-12">
                    <label asp-for="TypeOfInstitution" class="control-label"></label>
                    <span>@Model.TypeOfInstitutionNavigation.TypeName</span>
                </div>
            </div>
        <br />
        <div class="row">
            <div class="form-group col-sm-6">
                <label asp-for="ScannedCoverImage" class="control-label">صورة الغلاف</label>
                <img src="~/images/@Model.ScannedCoverImage" width="250" height="250" />

            </div>
            <div class="form-group col-sm-6">
                <label asp-for="ScannedLogoImage" class="control-label">صورة اللوجو</label>
                <img src="~/images/@Model.ScannedLogoImage" width="150" height="150" />

            </div>
        </div>

            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="ImpactFactor" class="control-label"></label>
                    <input asp-for="ImpactFactor" class="form-control" readonly />
                    <span asp-validation-for="ImpactFactor" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="PointerH" class="control-label"></label>
                    <input asp-for="PointerH" class="form-control" readonly />
                    <span asp-validation-for="PointerH" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="NumberOfCitations" class="control-label"></label>
                    <input asp-for="NumberOfCitations" class="form-control" readonly/>
                    <span asp-validation-for="NumberOfCitations" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group  form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" disabled /> نشط
                </label>
            </div>

        
        
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Institutionid">تعديل</a> |
    <a asp-action="Index">الرجوع الي القائمة</a>
</div>
