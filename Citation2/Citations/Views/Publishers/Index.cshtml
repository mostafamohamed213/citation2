@model IEnumerable<Citations.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}

 

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (item.Institutionid !=null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Institution.Name)
                </td>
            }

            @*else if (item.Name == null && item.Institutionid == null)
            {
                <td>
                    @Html.DisplayFor(m)
                </td>

            }*@
            else if (item.Name != string.Empty && item.Institutionid == null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Publisherid" class="fa fa-edit" title="Edit"></a> |
                <a asp-action="Details" asp-route-id="@item.Publisherid" class="fa fa-eye" title="Details"></a> |
                @*<a asp-action="Delete" asp-route-id="@item.Publisherid" class="fa fa-trash" title="Delete"></a>*@

            </td>
        </tr>
}
    </tbody>
</table>
