                <input asp-for="AppropriateValue" class="form-control" />
                <span asp-validation-for="AppropriateValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCitations" class="control-label"></label>
                <input asp-for="NumberOfCitations" class="form-control" />
                <span asp-validation-for="NumberOfCitations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Institutionid" class="control-label"></label>
                <select asp-for="Institutionid" class="form-control" asp-items="ViewBag.Institutionid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Publisherid" class="control-label"></label>
