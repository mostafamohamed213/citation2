@model Citations.Models.IssueOfIssue

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تفاصيل</h1>

<div>
    <h4> الإصدار <span>@Model.IssuenumberOfIssue</span><span> للعدد @ViewBag.Issuenumber</span><span>مجلة @ViewBag.magazine.Name</span><span> مؤسسة @ViewBag.magazine.Institution.Name</span></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuenumberOfIssue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssuenumberOfIssue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfPublication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfPublication)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MagazineIssue.Issuenumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MagazineIssue.Issueid)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IssueOfIssueid">تعديل</a> |
    <a asp-action="Index" asp-route-id="@ViewBag.Issueid">العودة للإصدارات</a>
</div>
