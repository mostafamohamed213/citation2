@model Citations.Models.MagazineIssue

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تعديل</h1>

<h4><span> العدد</span>@Model.Issuenumber</h4>
<h1>@ViewBag.magazine.Name</h1>
<h2>@ViewBag.magazine.Institution.Name</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Issueid" />
            <div class="form-group">
                <label asp-for="Issuenumber" class="control-label"></label>
                <input asp-for="Issuenumber" class="form-control" />
                <span asp-validation-for="Issuenumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magazineid" class="control-label" hidden></label>
                <input asp-for="Magazineid" class="form-control" hidden />
                <span asp-validation-for="Magazineid" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Publisherid" class="control-label"></label>
                    <select asp-for="Publisherid" class="form-control" asp-items="ViewBag.Publisherid"></select>
                    <span asp-validation-for="Publisherid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfPublication" class="control-label"></label>
                    <input asp-for="DateOfPublication" class="form-control" />
                    <span asp-validation-for="DateOfPublication" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.magazineId">العودة للأعداد</a>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


